{
  "name": "eda",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "lambdas/*"
  ],
  "bin": {
    "eda": "bin/eda.js"
  },
  "scripts": {
    "postinstall": "npm run build -ws --if-present",
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "cdk": "cdk",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "cdk:diff": "cdk diff",
    "cdk:deploy": "cdk deploy --require-approval never",
    "cdk:destroy": "cdk destroy --force"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.6",
    "@types/jest": "^29.5.14",
    "@types/node": "22.7.9",
    "aws-cdk": "2.173.4",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "~5.6.3"
  },
  "dependencies": {
    "aws-cdk-lib": "2.173.4",
    "constructs": "^10.0.0",
    "dotenv": "^16.4.7",
    "esbuild": "^0.24.2"
  },
  "volta": {
    "node": "22.10.0"
  }
}
